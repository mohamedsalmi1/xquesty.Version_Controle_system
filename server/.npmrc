# Use a faster registry
registry=https://registry.npmjs.org/

# Increase network timeout to prevent timeouts during install
network-timeout=120000

# Cache settings for faster installations
cache=.npm-cache
prefer-offline=true

# Optimization flags
fund=false
audit=false

# If you have large optional dependencies you can skip them
optional=false

# Reduce verbosity to speed up logs
loglevel=warn
